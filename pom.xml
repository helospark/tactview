<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.helospark.tactview</groupId>
  <artifactId>tactview-parent</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>

  <modules>
    <module>tactview-ui</module>
    <module>tactview-core</module>
    <module>tactview-3rd-party</module>
    <module>tactview-api</module>
    <module>tactview-ui-api</module>
  </modules>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>com.helospark.tactview</groupId>
        <artifactId>tactview-core</artifactId>
        <version>0.0.1-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>com.helospark.tactview</groupId>
        <artifactId>tactview-3rd-party</artifactId>
        <version>0.0.1-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>com.helospark.tactview</groupId>
        <artifactId>tactview-api</artifactId>
        <version>0.0.1-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>com.helospark.tactview</groupId>
        <artifactId>tactview-ui-api</artifactId>
        <version>0.0.1-SNAPSHOT</version>
      </dependency>
      <dependency>
        <groupId>com.helospark</groupId>
        <artifactId>lightdi</artifactId>
        <version>0.0.9</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.0</version>
        <configuration>
          <source>18</source>
          <target>18</target>
          <forceJavacCompilerUse>true</forceJavacCompilerUse>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.0.0-M4</version>
        <configuration>
            <includes>
                <include>**/*Test.java</include>
                <include>**/*IT.java</include>
            </includes>
            <trimStackTrace>false</trimStackTrace>
            <systemProperties>
                <headless>true</headless>
            </systemProperties>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>